@using PagedList.Mvc;
@model PagedList.IPagedList<Model.EF.Content>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Slider{
    <!-- banner-2 -->
    <div class="page-head_agile_info_w3l">

    </div>
    <!-- //banner-2 -->
    <!-- page -->
    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
            <div class="container">
                <ul class="w3_short">
                    <li>
                        <a href="index.html">Home</a>
                        <i>|</i>
                    </li>
                    <li>News</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- //page -->
}
<style>
    .left {
        float: left;
    }

    .right {
        float: right;
    }

    .card-img-top {
        object-fit: cover;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, 300px);
        gap: 24px;
        justify-content: center;
    }

    .card-title {
        font-size: 24px;
        text-transform: uppercase;
    }

    .card-text {
        font-size: 14px;
    }

    .card-footer.text-muted {
        font-size: 12px;
    }

    .card-footer {
        display: flex;
        flex-direction: column;
    }
</style>
<div class="ads-grid py-sm-5 py-4">
    <div class="container py-xl-4 py-lg-2">
        <!--<h1 class="my-4">

        News-->
        @*<small>News</small>*@
        <!--</h1>-->
        <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            <span>N</span>ews

        </h3>

        <div class="card-container">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="card mb-4">
                        <img class="card-img-top" src="@item.Image" style="height:auto;max-height:200px;" alt="Card image cap">
                        <div class="card-body">
                            <h2 class="card-title">@item.Name</h2>
                            <p class="card-text">@item.Description</p>
                            <a href="/tin-tuc/@item.MetaTitle-@item.ID" class="btn btn-primary mt-2">Read More &rarr;</a>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="">
                                Posted on @item.CreatedDate by
                                <a href="#">@item.CreatedBy</a>
                            </div>
                            <div class="right">4 Likes | 8 Comments</div>
                        </div>
                    </div>
                }
            }
        </div>

        <div>
            <br />
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", "Content",
                             new { page }))
        </div>
    </div>
</div>