@model List<Model.EF.Tag>
<div class="col-lg-3 mt-lg-0 mt-4 p-lg-0">
    <div class="side-bar p-sm-4 p-3">
        <div class="search-hotel border-bottom py-2">
            <h3 class="agileits-sear-head mb-3">Search..</h3>
            <form action="#" method="post">
                <input id="productsSearch" type="search" placeholder="Article title....." name="search" required="">
                <input id="btnSearch" type="submit" value=" ">
            </form>
        </div>

        <div class="search-hotel border-bottom py-2">
            <h3 class="agileits-sear-head mb-3">Tagging</h3>
            <div class="w3l-range">
                <ul>
                    @foreach (var tag in Model)
                    {
                        <li>
                            <a href="/tag/@tag.ID">@tag.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <!-- //price -->
    </div>
    <!-- //product right -->
</div>
